<div id="blackjack-table">
  <h3>Dealer</h3>

  <div id="dealer-cards" class="row">
  </div>

  <div id="player-cards" class="row">
  </div>
</div>

<div class="player-profile">
  <div class="player-name">Name: <%= session['name'] %></div>
  <div class="player-bet">Bet: <%= session['bet'] %></div>
  <div class="player-total">Card: <span id="player-card-total-value"></span></div>

  <button id="start-button" class="btn btn-primary">Start</button>

  <div id="player-controls">
    <a class="btn btn-primary" href="javascript:Player.hit()">Hit</a>
    <a class="btn btn-default" href="javascript:Player.stay()">Stay</a>
  </div>
</div>
